<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControleAluno</servlet-name>
        <servlet-class>controle.ControleAlunoIncluir</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleAlunoExcluir</servlet-name>
        <servlet-class>controle.ControleAlunoExcluir</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleAlunoAlterar</servlet-name>
        <servlet-class>controle.ControleAlunoAlterar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleConsultar</servlet-name>
        <servlet-class>controle.ControleAlunoConsultar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControleAluno</servlet-name>
        <url-pattern>/controle.aluno.incluir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleAlunoExcluir</servlet-name>
        <url-pattern>/controle.aluno.excluir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleAlunoAlterar</servlet-name>
        <url-pattern>/controle.aluno.alterar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleConsultar</servlet-name>
        <url-pattern>/controle.aluno.consultar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
